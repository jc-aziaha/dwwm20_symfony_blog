{% extends "themes/base_user.html.twig" %}

{% block title %}Modifier mon profil{% endblock %}

{% block description %}Modification de mon profil{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier mon profil</h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto shadow p-4">
                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="edit_profile_form_firstName">Pr√©nom</label>
                        <div class="text-danger">{{form_errors(form.firstName)}}</div>
                        {{form_widget(form.firstName, {'attr': {'class':'form-control', 'autofocus': 'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="edit_profile_form_lastName">Nom</label>
                        <div class="text-danger">{{form_errors(form.lastName)}}</div>
                        {{form_widget(form.lastName, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="edit_profile_form_email">Email</label>
                        <div class="text-danger">{{form_errors(form.email)}}</div>
                        {{form_widget(form.email, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div>
                        <input formnovalidate type="submit" class="btn btn-primary w-100 shadow">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}