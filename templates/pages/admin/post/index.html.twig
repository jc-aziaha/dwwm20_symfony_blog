{% extends "themes/base_admin.html.twig" %}

{% block title %}Liste des articles{% endblock %}

{% block description %}Accéder à la liste des articles{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des articles</h1>

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('app_admin_post_create')}}" class="btn btn-primary shadow"><i class="fa-solid fa-plus"></i> Nouvel article</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Catégorie</th>
                    <th>Tags</th>
                    <th>Publié?</th>
                    <th>Contenu</th>
                    <th>Créé le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>
                            {% if post.image %}
                                <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('post_image_thumb') }}" alt="{{ post.title }}">
                            {% endif %}
                            
                        </td>
                        <td>Titre</td>
                        <td>Catégorie</td>
                        <td>Tags</td>
                        <td>Publié?</td>
                        <td>Contenu</td>
                        <td>Créé le</td>
                        <td>Modifié le</td>
                        <td>Options</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
