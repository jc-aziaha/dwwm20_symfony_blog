{% extends "themes/base_admin.html.twig" %}

{% block title %}Modifier l'article numéro {{post.id}}: {{post.title}}{% endblock %}

{% block description %}{{post.description}}{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier cet article</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-10 mx-auto p-4 shadow">
                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="admin_post_form_title">Titre</label>
                        <div class="text-danger">{{form_errors(form.title)}}</div>
                        {{form_widget(form.title, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_category">Catégorie</label>
                        <div class="text-danger">{{form_errors(form.category)}}</div>
                        {{form_widget(form.category, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_description">Description</label>
                        <div class="text-danger">{{form_errors(form.description)}}</div>
                        {{form_widget(form.description, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_keywords">Mots clés</label>
                        <div class="text-danger">{{form_errors(form.keywords)}}</div>
                        {{form_widget(form.keywords, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6 text-center">
                            {% if post.image %}
                                <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('post_image_thumb') }}" alt="{{ post.title }}">
                            {% else %}
                                <p>Aucune image existante pour cet article</p>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <label for="admin_post_form_image" class="mb-2">Choisissez une image</label>
                            <div class="text-danger">{{form_errors(form.imageFile)}}</div>
                            {{form_widget(form.imageFile, {'attr': {'class':'form-control mb-3'}})}}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_content">Bonne rédaction</label>
                        <div class="text-danger">{{form_errors(form.content)}}</div>
                        {{form_widget(form.content, {'attr': {'class':'form-control', 'rows':12}})}}
                    </div>
                    <div>
                        <input formnovalidate type="submit" class="btn btn-primary w-100 shadow" value="Sauvegarder">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}
